package controllers;

import models.Board;
import models.Game;
import models.Tile;
import view.TUI;

public class GameController {
	private Game game;
	private TUI ui;
	
	public GameController(){
		game = new Game(new Board());
		ui = new TUI(game);
	}
	public static void main(String[] args){
		GameController controller = new GameController();
		controller.start();
		controller.game.getBoard().setTile(2, 2, new Tile("groen", "circle"));
	}
	
	public void start(){
		ui.start();
	}
}
