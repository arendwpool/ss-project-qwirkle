package view;

import java.util.Observable;
import java.util.Observer;


public abstract class TUI implements Observer {
	/**
	 * De string op index 0 is altijd een beschrijving bij een menu
	 */

	private static final String[] MAIN_MENU = {null, "Nieuw spel starten", ""};
	
	public TUI(){
	}
	
	@Override
	public void update(Observable arg0, Object arg1) {
		// TODO Auto-generated method stub

	}

	public void start(){
		boolean terminated = false;
		while(terminated == false){
			renderMenu();
			determineOption();
		}
	}
	
	public void renderBoard(){
		
	}
	
	/**
	 * 
	 * @param noMenuItems
	 * @param menuItems(op index 0 altijd een uitleg bij een menu! zonder uitleg null houden!
	 */
	public void renderMenu(int noMenuItems, String[] menuItems){ //TODO vervangen van Array?
		if(menuItems[0] != null){
			System.out.println(menuItems[0]);
		}
		for(int i = 1; i <= noMenuItems; i++){
			System.out.println(i + menuItems[i]);
		}
	}
	
	public void determineOption(){
		
	}
	
}
