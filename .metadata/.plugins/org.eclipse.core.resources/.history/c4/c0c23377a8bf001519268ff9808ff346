package controllers;

import exceptions.FullGameException;
import models.Board;
import models.ComputerPlayer;
import models.Game;
import models.HumanPlayer;
import models.Pile;
import models.Player;
import models.Tile;
import view.BoardTUI;
import view.StartTUI;
import view.TUI;

public class GameController {
	private Game game;
	private TUI ui;
	private Player player;
	
	public GameController(){
		game = new Game(new Board(), new Pile(), 2);
		ui = new StartTUI();
		Player pc = new ComputerPlayer(game);
	}
	public static void main(String[] args){
		GameController controller = new GameController();
		controller.start();
	}
	
	public void start(){
		ui.start();
	}
	
	public void createLocalPlayer(String name){
		player = new HumanPlayer(name, game);
		try {
			game.addPlayer(player);
		} catch (FullGameException e) {
			System.out.println("De sessie die u wilt beginnen is al vol");
		}
	}
	public void startGame(){
		game.start();
	}
}
